@model IEnumerable<AspBlog.Models.Article>

@{
    ViewData["Title"] = "List of articles";
    <a class="clanky-tlacitko" href="../Account/Register">Registration</a>
    <a class="clanky-tlacitko" href="../Account/Login">Log in</a>    
}

<section>
    <br>
    <ul class="list-group" id="clanky">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <h2><a asp-action="Details" asp-route-id="@item.Id">@item.Title</a></h2>
                <p>@item.Description</p>
                @* @if (User.IsInRole("admin")) *@
                
                    <p>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </p>
                
            </li>
        }
    </ul>

    @* @if (User.IsInRole("admin")) *@
    <br>
    <p>
        <a class="clanky-tlacitko" asp-action="Create">Create new</a>
    </p>
</section>

